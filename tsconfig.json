{
  "compilerOptions": {
    "composite": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "umd",
    "target": "es6",
    "lib": ["dom", "es2021"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": ["./src/**/*"]
}
