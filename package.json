{
  "name": "cuke",
  "version": "0.1.0",
  "description": "",
  "scripts": {
    "build": "tsc --build && npm run copy-js && chmod +x dist/cli.js",
    "clean": "tsc --build --clean && rm -fr dist && rm -fr coverage",
    "lint": "eslint --ext .js,.ts src",
    "release": "npm run build && npm pack --pack-destination=./dist",

    "test:cuke": "cuke run features",
    "test:unit": "jest",
    "test": "npm run test:cuke && npm run test:unit",
   
    "coverage:cuke": "nyc --reporter=json --report-dir=coverage/cuke dist/cli.js run features",
    "postcoverage:cuke": "cp coverage/cuke/coverage-final.json coverage/cuke-final.json",
    "coverage:unit": "jest --coverage",
    "postcoverage:unit": "cp coverage/jest/coverage-final.json coverage/jest-final.json",

    "coverage": "npm run coverage:cuke && npm run coverage:unit",
    "postcoverage": "nyc merge coverage coverage/coverage-final.json && nyc report --check-coverage --temp-dir coverage --reporter=text --reporter=html",
 
    "watch": "tsc -w",
    "copy-js": "mkdir -p ./dist/external/js && cp -fr node_modules/jquery/dist/jquery.slim.min.js ./dist/external/js"
  },
  "nyc": {
    "all": true,
    "lines": 85
  },
  "main": "dist/index.js",
  "bin": {
    "cuke": "./dist/cli.js"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@cucumber/cucumber": "^8.9.1",
    "@cucumber/html-formatter": "^20.2.1",
    "@types/capture-console": "^1.0.1",
    "@types/debug": "^4.1.7",
    "@types/got": "^9.6.12",
    "@types/jquery": "^3.5.16",
    "@types/luxon": "^3.2.0",
    "@types/memorystream": "^0.3.0",
    "@types/node": "^18.11.18",
    "@types/selenium-webdriver": "^4.1.9",
    "autocannon": "^7.10.0",
    "capture-console": "^1.0.1",
    "chalk": "^4.1.2",
    "chromedriver": "^142.0.2",
    "cli-table3": "^0.6.3",
    "cucumber-html-reporter": "^5.5.0",
    "debug": "^4.3.4",
    "dedent": "^0.7.0",
    "dotenv": "^16.0.3",
    "got": "^14.6.4",
    "indent-string": "^5.0.0",
    "jest": "^30.2.0",
    "jquery": "^3.7.1",
    "luxon": "^3.2.1",
    "memorystream": "^0.3.1",
    "pre-commit": "^1.2.2",
    "selenium-webdriver": "^4.38.0",
    "shlex": "^2.1.2",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.1",
    "ts-retry-promise": "^0.7.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/jest": "^30.0.0",
    "@types/jsdom": "^27.0.0",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.32.0",
    "eslint-config-standard-with-typescript": "^32.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^27.2.0",
    "nyc": "^17.1.0",
    "typescript": "^4.9.4"
  },
  "precommit.silent": false,
  "pre-commit": [
    "lint"
  ]
}
